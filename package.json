{
  "name": "alexa-ts",
  "version": "4.0.0-alpha.0",
  "displayName": "Alexa Typescript SDK",
  "description": "A lightweight framework for building Alexa skills.",
  "keywords": [
    "alexa",
    "alexa-sdk",
    "aws-lambda",
    "sdk",
    "echo",
    "lambda"
  ],
  "author": {
    "name": "The Lab"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/o2Labs/alexa-ts"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map",
    "examples",
    "README.md",
    "LICENCE.txt",
    "CHANGELOG.md",
    "package.json"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write --config .prettierrc.yaml '{src,tests}/**/*.ts'",
    "clean": "rm -f *.d.ts *.js *.js.map",
    "test": "jest && tsc --noEmit",
    "build": "yarn clean && tsc -p src/tsconfig.json",
    "prepare": "yarn format && yarn test && yarn build"
  },
  "dependencies": {
    "@types/node": "^8.5.1",
    "ask-sdk-model": "^1.5.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.9",
    "jest": "^22.0.4",
    "prettier": "^1.9.2",
    "ts-jest": "^22.0.0",
    "ts-node": "^2.1.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/.*\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
