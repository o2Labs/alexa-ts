{
  "name": "alexa-ts",
  "version": "2.5.0",
  "displayName": "Alexa Typescript SDK",
  "description": "A lightweight framework for building Alexa skills.",
  "keywords": [
    "alexa",
    "alexa-sdk",
    "aws-lambda",
    "sdk",
    "echo",
    "lambda"
  ],
  "author": {
    "name": "The Lab"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/o2Labs/alexa-ts"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "jest && gulp lint",
    "prepublish": "jest && gulp build"
  },
  "dependencies": {
    "@types/node": "^8.5.1"
  },
  "devDependencies": {
    "@types/jest": "^21.1.9",
    "del": "^2.2.2",
    "gulp": "~3.9.1",
    "gulp-tslint": "^7.1.0",
    "gulp-typescript": "^3.1.5",
    "jest": "^22.0.4",
    "ts-jest": "^22.0.0",
    "ts-node": "^2.1.0",
    "tslint": "^4.4.2",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/.*\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
